{% extends '@App/base.html.twig' %}

{% block seo %}
    {% if isFallback %}
        <link rel="canonical" href="/">
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if entries is empty %}
            <div class="alert alert-info" role="alert">There are currently no lobbies open.</div>
        {% else %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Game</th>
                        <th>Core</th>
                    </tr>
                </thead>
                <tbody>
                {% for entry in entries %}
                    <tr>
                        <td>{{ entry.username }}</td>
                        <td>{{ entry.gameName }}</td>
                        <td>{{ entry.coreName }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
